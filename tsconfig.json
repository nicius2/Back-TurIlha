{
  "compilerOptions": {
    // Imports
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Target & Module
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Libs
    "lib": ["ES2024"],
    "types": ["node", "jest"],

    // Paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Output
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strict options
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Import behavior
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    // Performance
    "skipLibCheck": true
  },

  "include": ["src"]
}