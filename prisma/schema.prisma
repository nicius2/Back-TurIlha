generator client {
  provider = "prisma-client-js"
  output = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
}

model Card {
  id          String   @id @default(uuid())
  title       String
  description String
  imageUrl    String
  mapsUrl     String
  longitude   Float
  latitude    Float
  type        CardType
  createdAt   DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)
}

enum Role {
  USER
  ADMIN
}

enum CardType {
  LANDSCAPE
  EVENT
  RESTAURANT
}